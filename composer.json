{
    "name": "beta/bitrix-psr16",
    "description": "PSR-16 (Simple cache) implementation for Bitrix",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "BitrixPSR16\\": "src/"
        }
    },
    "require": {
        "psr/simple-cache": "^3.0"
